[mysqld]
# Character set
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci

# Performance
innodb_buffer_pool_size=256M
max_connections=200
key_buffer_size=32M

# Logging
slow_query_log=1
slow_query_log_file=/var/log/mysql/slow.log
long_query_time=2

# Binary logging for replication
log_bin=mysql-bin
binlog_format=ROW
expire_logs_days=7

[client]
default-character-set=utf8mb4