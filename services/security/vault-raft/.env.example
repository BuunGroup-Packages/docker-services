# Vault Raft Configuration
VAULT_PORT=8200
VAULT_CLUSTER_PORT=8201
VAULT_ADVERTISE_ADDR=vault

# Additional nodes for HA (when using ha profile)
VAULT_PORT_2=8210
VAULT_CLUSTER_PORT_2=8211
VAULT_PORT_3=8220
VAULT_CLUSTER_PORT_3=8221

# HAProxy Configuration (HA mode)
HAPROXY_PORT=8300
HAPROXY_STATS_PORT=8404

# TLS Configuration (for production)
VAULT_TLS_DISABLE=1
# VAULT_CACERT=/vault/config/ca.crt
# VAULT_TLSCERT=/vault/config/vault.crt
# VAULT_TLSKEY=/vault/config/vault.key

# Auto-unseal Configuration (Optional)
# AWS KMS
# VAULT_SEAL_TYPE=awskms
# VAULT_AWSKMS_SEAL_KEY_ID=
# VAULT_AWSKMS_SEAL_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Azure Key Vault
# VAULT_SEAL_TYPE=azurekeyvault
# VAULT_AZUREKEYVAULT_SEAL_TENANT_ID=
# VAULT_AZUREKEYVAULT_SEAL_CLIENT_ID=
# VAULT_AZUREKEYVAULT_SEAL_CLIENT_SECRET=
# VAULT_AZUREKEYVAULT_SEAL_VAULT_NAME=
# VAULT_AZUREKEYVAULT_SEAL_KEY_NAME=

# GCP KMS
# VAULT_SEAL_TYPE=gcpckms
# VAULT_GCPCKMS_SEAL_KEY_RING=
# VAULT_GCPCKMS_SEAL_CRYPTO_KEY=
# VAULT_GCPCKMS_SEAL_PROJECT=

# Default user passwords (change these in production!)
VAULT_ADMIN_PASSWORD=admin-changeme
VAULT_DEV_PASSWORD=dev-changeme
VAULT_CICD_PASSWORD=cicd-changeme
VAULT_AUDITOR_PASSWORD=auditor-changeme