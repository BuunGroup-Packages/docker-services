# n8n Configuration
N8N_PORT=5678
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# Basic Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# Encryption Key (Generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=your-encryption-key-min-32-chars

# Database Configuration
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=changeme

# Redis Configuration (for queue mode)
REDIS_PASSWORD=changeme

# Execution Configuration
EXECUTIONS_PROCESS=main
EXECUTIONS_MODE=regular
# For scaling, set EXECUTIONS_MODE=queue and use worker profile

# Email Configuration (Optional)
N8N_EMAIL_MODE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_SSL=false
SMTP_FROM=n8n@example.com

# Timezone
TZ=UTC

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Metrics (Optional)
N8N_METRICS=false
N8N_METRICS_PREFIX=n8n_

# Binary Data TTL (minutes)
N8N_PERSISTED_BINARY_DATA_TTL=1440

# Additional Configuration
N8N_PUSH_BACKEND=websocket
N8N_HIRING_BANNER_ENABLED=false
N8N_TEMPLATES_ENABLED=true
N8N_PERSONALIZATION_ENABLED=true
N8N_VERSION_NOTIFICATIONS_ENABLED=true
N8N_DIAGNOSTICS_ENABLED=true