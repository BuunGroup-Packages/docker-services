# Global Environment Variables Example
# Copy this to .env and configure for your environment

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=docker-services

# Default timezone
TZ=UTC

# Network configuration
DEFAULT_NETWORK=docker-services

# Common ports (adjust if conflicts exist)
HTTP_PORT=80
HTTPS_PORT=443

# Resource limits
DEFAULT_MEMORY_LIMIT=512m
DEFAULT_CPU_LIMIT=1.0

# Logging
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# Security
ENABLE_FIREWALL=true
ALLOW_EXTERNAL_ACCESS=false

# Backup settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Monitoring
ENABLE_MONITORING=true
METRICS_RETENTION=15d

# Email notifications (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=admin@example.com